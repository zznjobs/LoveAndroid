<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 布局良好的计算器 -->
    <!-- 面试时很实用 -->
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:orientation="horizontal"
        android:rowCount="5"
        tools:context="com.zz.chapter03.GridLayoutActivity">

        <Button
            android:id="@+id/bt_1"
            android:text="1"
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/bt_2"
            android:text="2"
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/bt_3"
            android:text="3"
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/bt_devide"
            android:text="/"
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/bt_4"
            android:text="4"
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/bt_5"
            android:text="5"
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/bt_6"
            android:text="6"
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/bt_multiply"
            android:text="*"
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/bt_7"
            android:text="7"
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/bt_8"
            android:text="8"
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/bt_9"
            android:text="9"
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/bt_minus"
            android:text="-"
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/bt_0"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            android:text="0"
            tools:ignore="HardcodedText"/>


        <Button
            android:id="@+id/bt_dot"
            android:text="."
            tools:ignore="HardcodedText"/>


        <Button
            android:id="@+id/bt_plus"
            android:layout_gravity="fill"
            android:layout_rowSpan="2"
            android:text="+"
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/bt_equal"
            android:layout_columnSpan="3"
            android:layout_gravity="fill"
            android:text="="
            tools:ignore="HardcodedText"/>
    </GridLayout>

    <!-- 布局良好的登录框 -->
    <!-- 项目中很实用 -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:orientation="horizontal"
        android:rowCount="3">

        <TextView
            android:id="@+id/tv_name"
            android:layout_gravity="center"
            android:text="姓名："
            tools:ignore="HardcodedText"/>

        <EditText
            android:id="@+id/et_name"
            android:layout_columnSpan="3"
            android:layout_gravity="fill"
            tools:ignore="LabelFor,TextFields"/>

        <TextView
            android:id="@+id/tv_pwd"
            android:layout_gravity="center"
            android:text="密码："
            tools:ignore="HardcodedText"/>

        <EditText
            android:id="@+id/et_pwd"
            android:layout_columnSpan="3"
            android:layout_gravity="fill"
            tools:ignore="LabelFor,TextFields"/>

        <Button
            android:id="@+id/bt_login"
            android:layout_column="1"
            android:text="登录"
            tools:ignore="HardcodedText"/>
    </GridLayout>
</LinearLayout>